<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.bbs.commonmanga">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CMApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CommonManga"
        tools:ignore="AllowBackup">

        <activity
            android:name=".CMMainActivity"
            android:exported="true"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.CMMangaDetailActivity" />
        <activity android:name=".ui.CMSearchActivity" />
    </application>

</manifest>